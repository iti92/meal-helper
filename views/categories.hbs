<div class="categories">
{{#each categories}}

<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{this.strCategoryThumb}}" class="card-img" alt="{{this.idCategory}}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{this.strCategory}}</h5>
                <p class="card-text">{{this.strCategoryDescription}}</p>
                <a style="display:block" href="/categories/{{this.strCategory}}">Explore some meals</a>
            </div>
        </div>
    </div>
</div>

</a>
{{/each}}
</div>